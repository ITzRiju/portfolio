# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=photostudio_db
DB_USER=your_db_username
DB_PASSWORD=your_db_password

# Next.js Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-key-here

# Admin Configuration
ADMIN_EMAIL=admin@photostudio.com
ADMIN_PASSWORD=admin123
JWT_SECRET=your-jwt-secret-key-here

# Payment Gateway (Razorpay)
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@photostudio.com

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif,mp4,mov,avi

# API Configuration
API_BASE_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000

# Security
ENCRYPTION_KEY=your-encryption-key-here
SESSION_SECRET=your-session-secret-here

# Social Media Links
INSTAGRAM_URL=https://instagram.com/photostudio
FACEBOOK_URL=https://facebook.com/photostudio
YOUTUBE_URL=https://youtube.com/photostudio
TWITTER_URL=https://twitter.com/photostudio

# Google Analytics (Optional)
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Cloudinary (Optional - for image optimization)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Development/Production Mode
NODE_ENV=development
DEBUG=true

# Backup Configuration
BACKUP_PATH=/path/to/backup/directory
BACKUP_RETENTION_DAYS=30